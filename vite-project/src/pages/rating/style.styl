@import '../../assets/styles/stylus/mixins.styl';
.ratings
    background-color: #f3f5f7
    .score
        display: flex
        background-color #fff
        border-bottom: 1px solid rgba(7,17,27,.1)
        .left
            width 260px
            margin: 16px
            padding-right: 8px
            text-align: center
            border-right: 1px solid rgba(7,17,27,.1)
            .averageScore
                font-size: 32px
                color: rgb(255,153,0)
                line-height: 56px
            .text
                font-size: 20px
                color: rgb(7,17,27)
                line-height: 24px
            .describe
                font-size: 12px
                color: rgba(7,17,27,.2)
                line-height: 24px
        .star
            width 490px
            margin: 20px 8px
            font-size: 16px
            color: rgb(7,17,27)
            line-height: 36px
    .rating
        background-color #fff
        margin-top: 18px
        padding: 16px
        border-top: 1px solid rgba(7,17,27,.1)
        .filter
            display: flex
            height: 40px
            color: rgb(77, 85, 93)
            text-align: center
            font-size: 16px
            line-height: 40px
            padding 16px 0
            border-1px(rgba(7,17,27,.1))
            .all
                background-color rgb(0,160,220)
                width 60px
                margin-right: 16px
                color: #fff
            .suggest
                background-color rgb(0, 160, 220,.2)
                width 60px
                margin-right: 16px
            .roast
                background-color rgba(77, 85, 93,.2)
                width 60px
        .ratingContent
            li
                padding: 12px 0
                border-1px(rgba(7,17,27,.1))
                .title
                    display: flex
                    font-size: 20px
                    line-height: 24px
                    color: rgb(147,153,159)
                    .avatar
                        margin-right: 16px
                        img
                            width 56px
                            height 56px
                            border-radius: 50%
                    .right
                        .top
                            display: flex
                            justify-content: space-evenly
                            font-size: 16px
                            color: rgb(7,17,27)
                            line-height: 28px
                            .time
                                color: rgb(147,153,159)
                                font-weight: 200
                        .bottom
                            display: flex
                            font-size: 18px
                            .deliveryTime
                                color: rgb(147,153,159)
                                line-height: 24px
                                padding-left: 8px
                .content
                    margin-top: 8px
                    padding-left: 58px
                    .text
                        color: rgb(7,17,27)
                        font-size: 20px
                        line-height: 30px
                        padding-bottom: 2px
                    .tag
                        display: flex
                        .icon
                            display: inline-block
                            padding-top: -8px
                            padding-right: 2px
                            width 28px
                            height 24px
                        .good
                            background: url(./img/good.gif) no-repeat
                        .bad
                            background-image: url(./img/bad.gif) 
                            
                        ul
                            display: flex
                            overflow: hidden
                            li
                                width 50px
                                height 10px
                                white-space: nowrap
                                text-overflow: ellipsis
                                overflow hidden
                                border: 1px solid rgba(7,17,27,.1)
                                font-size: 8px
                                color: rgb(147,153,159)
                                margin-right: 6px

            

