@import '../../assets/styles/stylus/mixins.styl';
.food
    position: fixed
    left: 0
    top: 0
    bottom: 48px
    z-index: 30
    width: 100%
    // overflow hidden
    background-color #f3f5f7
    &.move-enter-active,&.move-leave-active
        transition: all .2s ease
    &.move-enter-from,&.mover-leave-active
        opacity 0
        transform: translate3d(100%,0,0)
    .back
        position: absolute
        top: 10px
        left: 0
        .icon-arrow_lift
            display: block
            padding: 10px
            font-size: 20px
            color: #000
    .img
        width: 100%vw
        img
            width: 100%
    .detail
        position relative
        padding: 18px
        background-color #fff
        margin-bottom: 36px
        .name
            font-size: 24px
            font-weight: 700
            line-height: 24px
            color: rgb(7,17,27)
        .sell
            font-size: 18px
            color: rgb(147,153,159)
            line-height:20px
            margin: 16px 0px 20px 0px
            .sellCount
                display: inline-block
                margin-right: 20px 
        .price
            .new
                display: inline-block
                margin-right: 20px
                font-size: 22px
                font-weight: 700
                color: rgb(240,20,20)
            .old
                display inline-block
                font-size: 18px
                line-height: 22px
                font-weight: 700
                text-decoration: line-through
                color: rgb(147,153,159)
        .addshopcart
            width 108px
            height 38px
            font-size: 16px
            text-align: center
            line-height: 38px
            color: #fff
            position: absolute
            bottom: 18px
            right: 18px
            .add
                border-radius: 24px
                background-color rgb(0,160,220)

    .introduce
        padding: 18px
        background-color #fff
        margin-bottom: 36px
        .title
            font-size: 22px
            line-height: 32px
            margin-bottom: 12px
            color: rgb(7,17,27)
        .text
            font-size: 18px
            line-height: 24px
            font-weight: 200
            color: rgb(77,85,93)
    .rating
        padding: 18px
        background-color #fff
        margin-bottom: 36px
        .title
            font-size: 22px
            line-height: 32px
            margin-bottom: 12px
            color: rgb(7,17,27)
        .filter
            display: flex
            height: 40px
            color: rgb(77, 85, 93)
            text-align: center
            font-size: 16px
            line-height: 40px
            padding 16px 0
            border-1px(rgba(7,17,27,.1))
            .all
                background-color rgb(0,160,220)
                width 60px
                margin-right: 16px
                color: #fff
            .suggest
                background-color rgb(0, 160, 220,.2)
                width 60px
                margin-right: 16px
            .roast
                background-color rgba(77, 85, 93,.2)
                width 60px
        .ratingContent
            li
                padding: 12px
                border-1px(rgba(7,17,27,.1))
                .title
                    display: flex
                    font-size: 20px
                    line-height: 24px
                    color: rgb(147,153,159)
                    justify-content: space-between
                    .avatar
                        display: flex
                        img
                            width 24px
                            height 24px
                            border-radius: 50%
                            margin-left: 8px
                .content
                    .icon
                        display: inline-block
                        padding-top: -8px
                        padding-right: 2px
                        width 28px
                        height 24px
                    .good
                        background: url(./img/good.gif) no-repeat
                    .bad
                        background-image: url(./img/bad.gif) 
                    .text
                        color: rgb(7,17,27)
                        font-size: 24px
                        line-height: 32px
                        padding-bottom: 12px















