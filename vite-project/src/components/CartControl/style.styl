.cartcontrol
    font-size: 0
    .cart-decrease
        display: inline-block
        padding: 6px
        line-height: 24px
        font-size: 24px
        color: rgb(0,160,220)
        &.move-enter-active,&.move-leaver-active
            transition: all .3s linear
        &.move-enter-from,&.move-leaver-active
            opacity 0
            transform: translate3d(24px,0,0) rotate(180deg) 
    .cart-count
        display: inline-block
        vertical-align: top
        width: 12px
        padding-top: 6px 
        line-height: 24px
        text-align: center
        font-size: 10px
        color: rgb(147,153,159)
    .cart-add
        display: inline-block
        padding: 6px
        line-height: 24px
        color: rgb(0,160,220)
        font-size: 24px
